{
    ".Parent": {
        "backgroundColor": "lightblue",
        "childClass": ".Child",
        "padding": {
            "top": 20,
            "left": 10,
            "right": 10,
            "bottom": 10
        },
        "direction": "row",
        "wrap": true,
        "numberOfChildren": 2
    },
    ".Child": {
        "backgroundColor": "blue",
        "layoutStrategy": {
            "width": "(containerWidth * 0.5) - 30"
        },
        "selfAlignment": "stretch",
        "margins": 10
    }
}
